{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <a href="{{ path("remove_bookmark", {courseId: courseId}) }}"
        {{ not isBookmarked(courseId) ? " style='display: none;'" }}
        title='click to forget'
        class='bookmark-control bookmark-forget f2 float-right'
        data-course-id="{{ osidIdToString(courseId) }}"
    >
        <img class="icon mr-1" src="{{ asset("images/Crystal_Clear/Crystal_Clear_action_bookmark.png") }}" alt="star icon"/>
        Saved
    </a>
    <a href="{{ path("add_bookmark", {courseId: courseId}) }}"
        {{ isBookmarked(courseId) ? " style='display: none;'" }}
        title='click to save'
        class='bookmark-control bookmark-save f2 float-right'
        data-course-id="{{ osidIdToString(courseId) }}"
    >
        <img class="icon mr-1" src="{{ asset("images/Crystal_Clear/Crystal_Clear_action_bookmark_Silver.png") }}" alt="star icon"/>
        Save
    </a>
{% else %}
    <a href="{{ path("login", {returnTo: app.request.uri }) }}" class="f2 float-right">Log-in to save</a>
{% endif %}
