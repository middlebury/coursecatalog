{% extends 'knp_menu.html.twig' %}

{% block root %}
<nav class="nav" aria-label="Course Catalog Navigation">
{{ parent() }}
</nav>
{% endblock %}

{% block list %}
    {% set listAttributes = listAttributes is not empty ? listAttributes : {class: ''} %}
    {% set class = [listAttributes.class is not empty ? listAttributes.class : '', 'nav__list']|join(' ') %}
    {% set class = item.level == 0 ? class : [class, "nav__sublist nav-dropdown__menu has-toggler js-dropdown-#{item.extra('menuId')}" ]|join(' ') %}
    {% set listAttributes = listAttributes|merge({class: class}) %}
    {{ parent() }}
{% endblock %}

{% block item %}
    {% set classes = item.attribute('class') is not empty ? [item.attribute('class')] : [] %}
    {% do item.setAttribute('class', classes|merge([item.level == 1 ? 'nav__item' : 'nav__subitem'])|join(' ')) %}
    {{ parent() }}
{% endblock %}

{% block linkElement %}
{% import 'knp_menu.html.twig' as knp_menu %}
{% set linkClasses = item.linkAttributes.class is defined ? item.linkAttributes.class | split(' ') : [] %}
{% set spanClasses = linkClasses | filter(v => v matches '/^link-/') %}
{% set spanAttributes = spanClasses is empty ? {} : {class: spanClasses | join(' ') } %}
{% set linkClasses = linkClasses | filter(v => not (v matches '/^link-/')) %}

{% set mainLinkAttributes = {class: linkClasses|merge([item.level == 1 ? 'nav__link' : 'nav__sublink', matcher.isCurrent(item) or matcher.isAncestor(item) ? 'nav__link--active'])|join(' ')} %}
{% set dataAttributes = item.linkAttributes | filter((v, k) => k matches '/^data-/') %}
<a href="{{ item.uri }}" {{ knp_menu.attributes(mainLinkAttributes) }} {{ knp_menu.attributes(dataAttributes) }}>
    <span {{ knp_menu.attributes(spanAttributes) }}>{{ block('label') }}</span>
    {% if item.hasChildren and options.depth is not same as(0) %}
        <svg class="icon ml-1 d-none d-lg-inline " focusable="false" aria-hidden="true">
            <use xlink:href="#icon-chevron-down">
        </svg>
    {% endif %}
</a>
{% if item.hasChildren and options.depth is not same as(0)  %}
    <button class="nav__button" data-toggle-target=".js-dropdown-{{item.extra('menuId')}}">
        <span class="sr-only">Toggle {{ block('label') }} menu</span>
        <svg class="icon toggled-flip " focusable="false" aria-hidden="true">
            <use xlink:href="#icon-chevron-down">
        </svg>
    </button>
{% endif %}
{% endblock %}
